pipeline {
    agent any

    environment {
        PM_API_TOKEN_ID = credentials('pm-api-token-id')
        PM_API_TOKEN_SECRET = credentials('pm-api-token-secret')
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
        JENKINS_PUB_KEY = credentials('jenkins-pub-key')
        JENKINS_PRIV_KEY = credentials('jenkins-priv-key')
    }

    stages { // All stages must be within this single 'stages' block
        stage('authentication') {
            agent {
                docker {
                    image 'alpine'
                    args '--entrypoint=""'
                }
            }
            steps {
                dir('cluster-k8s/terraform') {
                    // The withCredentials block should wrap the steps that use the credentials
                    withCredentials([sshUserPrivateKey(credentialsId: 'jenkins-priv-key', keyFileVariable: 'JENKINS_PRIV_KEY_FILE')]) { // Changed variable name to avoid conflict with environment variable
                        sh '''
                            cp "$JENKINS_PRIV_KEY_FILE" id_rsa
                            echo "$JENKINS_PUB_KEY" > id_rsa.pub
                        '''
                    }
                }
            }
        }

        stage('init') {
            agent {
                docker {
                    image 'hashicorp/terraform:1.12.2'
                    args '--entrypoint=""'
                }
            }
            steps {
                dir('cluster-k8s/terraform') {
                    sh '''
                        terraform init -no-color
                    '''
                }
            }
        }

        stage('plan') {
            agent {
                docker {
                    image 'hashicorp/terraform:1.12.2'
                    args '--entrypoint=""'
                }
            }
            steps {
                dir('cluster-k8s/terraform') {
                    sh '''
                        terraform plan -no-color
                    '''
                }
            }
        }

        stage('apply') {
            agent {
                docker {
                    image 'hashicorp/terraform:1.12.2'
                    args '--entrypoint=""'
                }
            }
            steps {
                dir('cluster-k8s/terraform') {
                    sh '''
                        terraform apply -no-color -auto-approve
                    '''
                }
            }
        }
    } // End of the single 'stages' block
}